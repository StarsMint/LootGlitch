<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 300 300" width="300" height="300">
  <defs>
    <linearGradient id="catGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff6b9d;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#c06c84;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow">
      <feGaussianBlur in="SourceAlpha" stdDeviation="3"/>
      <feOffset dx="2" dy="2" result="offsetblur"/>
      <feMerge>
        <feMergeNode/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="300" height="300" fill="#f8f9fa" rx="20"/>
  
  <!-- Cat body -->
  <ellipse cx="150" cy="180" rx="90" ry="80" fill="url(#catGradient)" filter="url(#shadow)">
    <animate attributeName="ry" values="80;85;80" dur="0.5s" repeatCount="indefinite"/>
  </ellipse>
  
  <!-- Cat head -->
  <circle cx="150" cy="120" r="70" fill="url(#catGradient)" filter="url(#shadow)">
    <animate attributeName="r" values="70;73;70" dur="0.5s" repeatCount="indefinite"/>
  </circle>
  
  <!-- Left ear -->
  <path d="M 90 70 L 70 30 L 110 60 Z" fill="url(#catGradient)" filter="url(#shadow)">
    <animateTransform attributeName="transform" type="rotate" values="0 90 70; -5 90 70; 0 90 70" dur="0.5s" repeatCount="indefinite"/>
  </path>
  
  <!-- Right ear -->
  <path d="M 210 70 L 230 30 L 190 60 Z" fill="url(#catGradient)" filter="url(#shadow)">
    <animateTransform attributeName="transform" type="rotate" values="0 210 70; 5 210 70; 0 210 70" dur="0.5s" repeatCount="indefinite"/>
  </path>
  
  <!-- Left eye (laughing) -->
  <path d="M 115 105 Q 120 110 125 105" stroke="#2d3436" stroke-width="4" fill="none" stroke-linecap="round">
    <animate attributeName="d" values="M 115 105 Q 120 110 125 105; M 115 110 Q 120 115 125 110; M 115 105 Q 120 110 125 105" dur="0.5s" repeatCount="indefinite"/>
  </path>
  
  <!-- Right eye (laughing) -->
  <path d="M 175 105 Q 180 110 185 105" stroke="#2d3436" stroke-width="4" fill="none" stroke-linecap="round">
    <animate attributeName="d" values="M 175 105 Q 180 110 185 105; M 175 110 Q 180 115 185 110; M 175 105 Q 180 110 185 105" dur="0.5s" repeatCount="indefinite"/>
  </path>
  
  <!-- Mouth (laughing) -->
  <path d="M 130 135 Q 150 155 170 135" stroke="#2d3436" stroke-width="4" fill="none" stroke-linecap="round">
    <animate attributeName="d" values="M 130 135 Q 150 155 170 135; M 130 138 Q 150 158 170 138; M 130 135 Q 150 155 170 135" dur="0.5s" repeatCount="indefinite"/>
  </path>
  
  <!-- Pointing finger -->
  <g transform="translate(220, 140)">
    <animateTransform attributeName="transform" type="translate" values="220,140; 210,135; 220,140" dur="0.5s" repeatCount="indefinite"/>
    <!-- Hand -->
    <ellipse cx="0" cy="0" rx="15" ry="20" fill="#ffd7ba" filter="url(#shadow)"/>
    <!-- Finger -->
    <rect x="-8" y="-30" width="16" height="30" rx="8" fill="#ffd7ba" filter="url(#shadow)"/>
  </g>
  
  <!-- LOL text -->
  <text x="150" y="270" text-anchor="middle" font-family="Arial, sans-serif" font-size="36" font-weight="bold" fill="#2d3436">
    LOL!
    <animate attributeName="opacity" values="1;0.5;1" dur="0.5s" repeatCount="indefinite"/>
  </text>
  
  <!-- Laugh tears -->
  <circle cx="105" cy="125" r="5" fill="#00d9ff" opacity="0.7">
    <animate attributeName="cy" values="125;135;145" dur="1s" repeatCount="indefinite"/>
    <animate attributeName="opacity" values="0.7;0.5;0" dur="1s" repeatCount="indefinite"/>
  </circle>
  <circle cx="195" cy="125" r="5" fill="#00d9ff" opacity="0.7">
    <animate attributeName="cy" values="125;135;145" dur="1s" begin="0.3s" repeatCount="indefinite"/>
    <animate attributeName="opacity" values="0.7;0.5;0" dur="1s" begin="0.3s" repeatCount="indefinite"/>
  </circle>
</svg>
