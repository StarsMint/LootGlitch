<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 630" width="1200" height="630">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0a0e14;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1f2632;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#00ff88;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#00d9ff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ff00ff;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="5" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
    <filter id="strongGlow">
      <feGaussianBlur stdDeviation="10" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGradient)"/>
  
  <!-- Decorative elements -->
  <circle cx="100" cy="100" r="150" fill="#00ff88" opacity="0.05"/>
  <circle cx="1100" cy="500" r="200" fill="#00d9ff" opacity="0.05"/>
  <circle cx="600" cy="300" r="250" fill="#ff00ff" opacity="0.03"/>
  
  <!-- Glitch lines -->
  <rect x="50" y="150" width="300" height="8" fill="url(#textGradient)" opacity="0.3" filter="url(#glow)"/>
  <rect x="850" y="400" width="250" height="8" fill="url(#textGradient)" opacity="0.3" filter="url(#glow)"/>
  <rect x="200" y="550" width="400" height="8" fill="url(#textGradient)" opacity="0.3" filter="url(#glow)"/>
  
  <!-- Logo Icon -->
  <g transform="translate(600, 200)">
    <circle r="80" fill="none" stroke="url(#textGradient)" stroke-width="6" filter="url(#strongGlow)"/>
    <circle r="50" fill="url(#textGradient)" filter="url(#glow)"/>
  </g>
  
  <!-- Main Title -->
  <text x="600" y="360" text-anchor="middle" font-family="Arial, sans-serif" font-size="90" font-weight="900" fill="url(#textGradient)" filter="url(#strongGlow)">
    LOOTGLITCH
  </text>
  
  <!-- Subtitle -->
  <text x="600" y="430" text-anchor="middle" font-family="Arial, sans-serif" font-size="36" font-weight="400" fill="#8892a6">
    Free V-Bucks • COD Points • Robux & More
  </text>
  
  <!-- Call to action -->
  <rect x="450" y="480" width="300" height="70" rx="35" fill="url(#textGradient)" filter="url(#glow)"/>
  <text x="600" y="528" text-anchor="middle" font-family="Arial, sans-serif" font-size="32" font-weight="700" fill="#0a0e14">
    CLAIM NOW
  </text>
  
  <!-- Icons representing games -->
  <g opacity="0.6">
    <!-- V-Bucks icon -->
    <circle cx="200" cy="500" r="30" fill="url(#textGradient)" filter="url(#glow)"/>
    <text x="200" y="515" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" fill="#0a0e14">V</text>
    
    <!-- COD icon -->
    <circle cx="300" cy="500" r="30" fill="url(#textGradient)" filter="url(#glow)"/>
    <text x="300" y="515" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" fill="#0a0e14">C</text>
    
    <!-- Robux icon -->
    <circle cx="900" cy="500" r="30" fill="url(#textGradient)" filter="url(#glow)"/>
    <text x="900" y="515" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" fill="#0a0e14">R</text>
    
    <!-- UC icon -->
    <circle cx="1000" cy="500" r="30" fill="url(#textGradient)" filter="url(#glow)"/>
    <text x="1000" y="515" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" fill="#0a0e14">U</text>
  </g>
  
  <!-- URL -->
  <text x="600" y="600" text-anchor="middle" font-family="Arial, sans-serif" font-size="28" font-weight="600" fill="#00ff88">
    lootglitch.me
  </text>
</svg>
